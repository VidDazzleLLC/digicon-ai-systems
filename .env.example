# Digicon AI Systemsâ„¢ - Environment Variables
# Copy this file to .env.local and fill in your actual values

# Grok API Key (for MCP monetization layer)
GROK_API_KEY=your_grok_api_key_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Twilio Configuration (for voice bot)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Twitter/X API (for outreach automation)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Optional: Analytics & Tracking
GOOGLE_ANALYTICS_ID=your_ga_id

# Optional: Stripe (for payments)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Code Execution Architecture (replaces traditional MCP)
# Feature flag to enable/disable code execution system
USE_CODE_EXECUTION=true

# Gemini 2.0 Flash API (for File Search and Context Caching)
GEMINI_API_KEY=your_gemini_api_key_here

# Sandbox Configuration
SANDBOX_TIMEOUT_SEC=30
SANDBOX_MAX_MEMORY_MB=512

# PII Protection
ENABLE_PII_PROTECTION=true

# Cost Tracking
ENABLE_COST_TRACKING=true
