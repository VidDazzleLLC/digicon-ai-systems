# ===========================================
# Digicon AI Systems - Environment Variables
# Launch Date: November 17, 2025
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://username:password@host:5432/digicon_production
# Example: postgresql://digicon:securepass@db.example.com:5432/digicon_prod
# Note: For Supabase, use the connection string from your project settings

# ===========================================
# AI/LLM API KEYS
# ===========================================

# Anthropic Claude (High Priority Systems)
# Used by: Payroll, Compliance, AI Infrastructure audits
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-XXXXX

# Google Gemini File Search (Document Understanding)
# Used by: All 6 audit systems for document search and analysis
# Get from: https://ai.google.dev/
GEMINI_FILE_SEARCH_API_KEY=AIzaSyXXXXX

# Together.ai (High-Volume Systems)
# Used by: HRIS, CRM, ERP audits (fallback for all systems)
# Get from: https://api.together.xyz/
TOGETHER_AI_API_KEY=XXXXX

# Grok API (Legacy - Optional)
# Used by: MCP monetization layer (if applicable)
# Get from: https://console.x.ai/
GROK_API_KEY=your_grok_api_key_here

# OpenAI (Optional - Fallback)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-XXXXX

# ===========================================
# PAYMENT PROCESSING (STRIPE)
# ===========================================

# Stripe Live Keys
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_XXXXX
STRIPE_PUBLISHABLE_KEY=pk_live_XXXXX

# Stripe Webhook Secret
# Set up webhook at: https://digicon-ai-systems.vercel.app/api/stripe/webhook
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_XXXXX

# Stripe Test Keys (for development)
# STRIPE_SECRET_KEY=sk_test_XXXXX
# STRIPE_PUBLISHABLE_KEY=pk_test_XXXXX
# STRIPE_WEBHOOK_SECRET=whsec_test_XXXXX

# ===========================================
# SECURITY & ENCRYPTION
# ===========================================

# Encryption Secret (Generate with: openssl rand -hex 32)
ENCRYPTION_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# JWT Secret (Generate with: openssl rand -hex 32)
JWT_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Session Secret (Generate with: openssl rand -hex 32)
SESSION_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ===========================================
# SUPABASE CONFIGURATION (if used)
# ===========================================

# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Environment
NODE_ENV=production
# Options: development, production, test

# Server Port
PORT=3000

# Base URL (Production)
BASE_URL=https://digicon-ai-systems.vercel.app
# For development: http://localhost:3000

# API Base URL (if different from BASE_URL)
API_BASE_URL=https://digicon-ai-systems.vercel.app/api

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable Code Execution for AI audits
USE_CODE_EXECUTION=true

# Enable Gemini File Search
USE_GEMINI_FILE_SEARCH=true

# Enable Auto-Learning from audit results
ENABLE_AUTO_LEARNING=true

# Enable PII (Personally Identifiable Information) Protection
ENABLE_PII_PROTECTION=true

# Enable Conference Room Secure File Upload
ENABLE_CONFERENCE_ROOM=true

# Enable Multi-Platform Publishing (future feature)
ENABLE_MULTI_PLATFORM_PUBLISH=false

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================

# Maximum Concurrent Audits
MAX_CONCURRENT_AUDITS=10

# Default LLM Provider
DEFAULT_LLM_PROVIDER=anthropic
# Options: anthropic, gemini, together, openai

# Fallback LLM Provider
FALLBACK_LLM_PROVIDER=together
# Options: anthropic, gemini, together, openai

# LLM Request Timeout (seconds)
LLM_REQUEST_TIMEOUT=300

# Max File Upload Size (MB)
MAX_FILE_UPLOAD_SIZE=100

# Audit Timeout (minutes)
AUDIT_TIMEOUT=60

# ===========================================
# LOGGING & MONITORING
# ===========================================

# Log Level
LOG_LEVEL=info
# Options: debug, info, warn, error

# Sentry DSN (Optional - for error tracking)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Sentry Environment
SENTRY_ENVIRONMENT=production
# Options: development, staging, production

# Enable Performance Monitoring
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================================
# TWILIO (Voice Bot - Optional)
# ===========================================

# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ===========================================
# TWITTER/X API (Outreach Automation - Optional)
# ===========================================

# Get from: https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# ===========================================
# ANALYTICS & TRACKING (Optional)
# ===========================================

# Google Analytics
GOOGLE_ANALYTICS_ID=your_ga_id

# PostHog (Product Analytics)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================

# SMTP Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_password
SMTP_FROM=noreply@digicon.ai

# SendGrid (Alternative)
SENDGRID_API_KEY=your_sendgrid_api_key

# ===========================================
# RATE LIMITING
# ===========================================

# API Rate Limit (requests per minute)
API_RATE_LIMIT=100

# Auth Rate Limit (login attempts per hour)
AUTH_RATE_LIMIT=10

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://digicon-ai-systems.vercel.app,https://www.digicon.ai

# ===========================================
# CACHE CONFIGURATION
# ===========================================

# Redis URL (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Cache TTL (seconds)
CACHE_TTL=3600

# ===========================================
# WEBHOOK ENDPOINTS
# ===========================================

# Internal webhook secret for system-to-system communication
WEBHOOK_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Skip API key validation (development only)
# SKIP_API_KEY_VALIDATION=true

# Enable Debug Mode
# DEBUG=true

# Mock External APIs
# MOCK_APIS=true
